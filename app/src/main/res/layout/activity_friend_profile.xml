<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.dominika.dluhy.activities.FriendProfileActivity">

    <include layout="@layout/user_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <Button
            android:id="@+id/our_debts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/our_debts"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/friend_profile_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sum"
            android:textSize="@dimen/sum_size"
            android:layout_marginTop="16dp"
            android:inputType="numberDecimal|numberSigned"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_debt_from_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add" />

</android.support.design.widget.CoordinatorLayout>
