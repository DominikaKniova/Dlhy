<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/debt_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/fab_margin"
    android:minWidth="300dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/dialog_debt_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$$$"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialog_debt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_toRightOf="@+id/dialog_debt_sum"
            android:layout_marginRight="16dp"
            android:maxLines="1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/dialog_debt_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dialog_debt_name"
            android:layout_toLeftOf="@+id/dialog_debt_menu"
            android:text="Note"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/dialog_debt_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_more_options"/>


</RelativeLayout>